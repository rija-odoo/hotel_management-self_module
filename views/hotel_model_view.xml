<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="hotel_model_action" model="ir.actions.act_window">
        <field name="name">Hotel</field>
        <field name="res_model">hotel.model</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- Hotel Form View -->

    <record id="view_hotel_form" model="ir.ui.view">
        <field name="name">hotel_model_hotel_form</field>
        <field name="model">hotel.model</field>
        <field name="arch" type="xml">
            <form>

                <header>
                    <field name="states" widget="statusbar"></field>
                    <!-- <button name="action_sold" type="object" string="SOLD"
                        states="new,offer_received" />
                    <button name="action_sold" type="object" string="SOLD   "
                        states="offer_accepted"
                        class="oe_highlight"></button>
                    <button name="action_cancled" type="object" string="CANCEL"
                        states="new,offer_received,offer_accepted" /> -->
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="city" />
                            <field name="state" />
                            <field name="country" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="facility" widget="many2many_tags"
                                    options="{'color_field': 'color'}" />
                                <field name="description" />
                                <field name="website" />
                                <field name="star_rating" />

                            </group>
                        </page>
                        <page string="Offer">
                            <field name="offer_ids"></field>
                        </page>
                        <page string="Other info">
                            <group>

                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Hotel Tree View -->

    <record id="view_hotel_tree" model="ir.ui.view">
        <field name="name">hotel_model_hotel_tree</field>
        <field name="model">hotel.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Title" />
                <field name="city" />
                <field name="country" />
                <field name="star_rating" />
                <field name="facility" widget="many2many_tags" options="{'color_field': 'color'}" />
            </tree>
        </field>
    </record>

    <!-- Hotel Search View -->
    <record id="view_hotel_search" model="ir.ui.view">
        <field name="name">hotel_model_hotel_search</field>
        <field name="model">hotel.model</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="city" />
                <field name="country" />
                <field name="star_rating" />
            </search>
        </field>
    </record>


</odoo>



















      