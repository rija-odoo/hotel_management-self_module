<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="hotel_model_action" model="ir.actions.act_window">
        <field name="name">Hotel</field>
        <field name="res_model">hotel.model</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- Hotel Form View -->

    <record id="view_hotel_form" model="ir.ui.view">
        <field name="name">hotel_model_hotel_form</field>
        <field name="model">hotel.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="email" />
                            <field name="phone" />
                            <field name="zip_code" />
                        </group>
                        <group>
                            <field name="address" />
                            <field name="city" />
                            <field name="state" />
                            <field name="country" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="facility" widget="many2many_tags"
                                    options="{'color_field': 'color'}" />
                                <field name="description" />
                                <field name="website" />
                                <field name="star_rating" />

                            </group>
                        </page>
                        <page string="Offer">

                        </page>
                        <page string="Other info">
                            <group>

                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Hotel Tree View -->

    <record id="view_hotel_tree" model="ir.ui.view">
        <field name="name">hotel_model_hotel_tree</field>
        <field name="model">hotel.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="city" />
                <field name="country" />
                <field name="phone" />
                <field name="email" />
                <field name="star_rating" />
                <field name="facility" widget="many2many_tags" options="{'color_field': 'color'}" />


            </tree>
        </field>
    </record>

    <!-- Hotel Search View -->
    <record id="view_hotel_search" model="ir.ui.view">
        <field name="name">hotel_model_hotel_search</field>
        <field name="model">hotel.model</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="city" />
                <field name="country" />
            </search>
        </field>
    </record>


</odoo>



















      