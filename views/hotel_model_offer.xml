<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="hotel_model_offer_action" model="ir.actions.act_window">
        <field name="name">Offer</field>
        <field name="res_model">hotel.model.offer</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain"> [('property_type_id', '=', active_id)]</field> -->
    </record>
    <record id="hotel_model_View_offer_tree" model="ir.ui.view">
        <field name="name">hotel.model.offer.tree</field>
        <field name="model">hotel.model.offer</field>
        <field name="arch" type="xml">
            <tree string="Offer">
             <!-- decoration-success="status == 'accepted'"
                decoration-danger="status == 'refused'" -->
                <field name="customer_id" string="Customer"></field>
                <field name="price" string="Price"></field>
                <field name="room_type" string="Room Type"></field>
                <field name="room_status" string="Room Status"></field>

                <!-- <button name="action_room_booked" type="object" icon="fa-check"
                    attrs="{'invisible':[('status','in',['room_booked'])]}" title="room booked" />
             -->

            </tree>
        </field>
    </record>
</odoo>